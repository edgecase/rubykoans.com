        $.fn.scrollToAnchor = function() {
          return this.click(function(e) {
            if(iPhone()) { return; }

            e.preventDefault();
            var targetSection = $($(this).attr('href'));
            var scrollTo      = targetSection.offset().top;
            $('html,body').animate({scrollTop: scrollTo}, 350, 'easeInOutExpo');
          });
        };


